{
    "name": "libretorio",
    "version": "1.0.0",
    "description": "(Sarcasm) A grandiose TypeScript/Node.js miracle worker designed to somehow manage your ever-growing hoard of books, comics, manga, and any other reading material you can throw at it. It claims to catalog, search, sort, and track your reading progress with the precision of a hyperactive librarian. Perfect for those who believe they can tame their literary chaos with a few lines of code and a lot of wishful thinking.",
    "scripts": {
        "test": "jest",
        "start": "npm run serve",
        "serve": "node dist/server.js",
        "debug": "nodemon --inspect-brk=0.0.0.0:9229 dist/server.js",
        "debug-2": "npm run build && npm run watch-debug",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "watch-ts": "tsc -w",
        "serve-debug": "nodemon --inspect dist/server.js",
        "build": "npm run build-ts && npm run lint && npm run copy-static-assets && npm run 7z-perm",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "build-ts": "tsc",
        "lint": "eslint -c .eslintrc.js --ext .ts src/**/*.ts",
        "lint-fix": "eslint --fix src/**/*.ts",
        "7z-perm": "chmod +x node_modules/7zip-bin/linux/x64/7za",
        "postinstall": "npm run build && npm run 7z-perm"
    },
    "keywords": [],
    "author": "Rigoberto L. Salgado Reyes <rlsalgado2006@gmail.com>",
    "license": "AGPL-3.0",
    "engines": {
        "node": "20.x"
    },
    "dependencies": {
        "7zip-bin": "^5.2.0",
        "archiver": "^7.0.1",
        "axios": "^1.7.2",
        "chokidar": "^3.6.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "errorhandler": "^1.5.1",
        "express": "^4.18.2",
        "fs-extra": "^11.2.0",
        "helmet": "^7.1.0",
        "js-base64": "^3.7.7",
        "lusca": "^1.7.0",
        "module-alias": "^2.2.3",
        "node-7z": "^3.0.0",
        "node-unrar-js": "^2.0.2",
        "pg": "^8.11.3",
        "redis": "^4.6.15",
        "sharp": "^0.33.4",
        "string-similarity": "^4.0.4",
        "unzipper": "^0.12.3",
        "uuid": "^10.0.0",
        "ws": "^8.15.1",
        "xml2js": "^0.6.2"
    },
    "devDependencies": {
        "@types/archiver": "^6.0.2",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.16",
        "@types/errorhandler": "^1.5.3",
        "@types/express": "^4.17.19",
        "@types/fs-extra": "^11.0.4",
        "@types/lusca": "^1.7.4",
        "@types/node": "^20.8.5",
        "@types/node-7z": "^2.1.8",
        "@types/pg": "^8.10.9",
        "@types/shelljs": "^0.8.15",
        "@types/string-similarity": "^4.0.2",
        "@types/unzipper": "^0.10.10",
        "@types/uuid": "^10.0.0",
        "@types/ws": "^8.5.10",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^6.7.5",
        "@typescript-eslint/eslint-plugin-tslint": "^6.7.5",
        "@typescript-eslint/parser": "^6.7.5",
        "concurrently": "^8.2.2",
        "eslint": "^8.51.0",
        "eslint-plugin-jsdoc": "^46.8.2",
        "eslint-plugin-no-null": "^1.0.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "shelljs": "^0.8.5",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    }
}
